<mvc:View
    controllerName="ymdb_wizard.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">

    <App id="app">
        <NavContainer id="wizardNavContainer">
            <pages>
                <Page id="wizardContentPage" 
                        showHeader="true" 
                        title="{i18n>wizardTitle}"
                        titleLevel="Auto">
                    <content>

                        <Wizard 
                            id="WarrantyPortalWizard"
                            class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                            complete="wizardCompletedHandler">

                            <!-- first step - General Details -->
                            <WizardStep 
                                id="generalDetailsStep"
                                title="{i18n>genDetailsPageTitle}"
                                validated="false"
                                activate="genInfoValidation">
                                <MessageStrip 
                                    class="sapUiSmallMarginBottom"
                                    text="{i18n>genDetailsMessageStripText}"
                                    showIcon="true"/>
                                <Text 
                                    class="sapUiSmallMarginBottom"
                                    text="{i18n>genDetailsText}"/>
                                <form:SimpleForm 
                                    editable="true"
                                    layout="ResponsiveGridLayout">

                                    <!-- field - partner  -->
                                    <Label text="{i18n>partner}" required="true" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/partnerState}" 
                                        id="partner"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>partnerInputText}"
                                        value="{/partner}"/>

                                    <!-- field - claimType  -->
                                    <Label text="{i18n>claimType}" required="true" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/claimTypeState}" 
                                        id="claimType"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>claimTypeInputText}"
                                        value="{/claimType}"/>

                                    <!-- field - reference date  -->
                                    <Label text="{i18n>refDate}" />
                                    <DatePicker 
                                        id="refDate"
                                        displayFormat="short"
                                        value="{/refDate}"
                                    />

                                    <!-- field - inventory number -->
                                    <Label text="{i18n>invNo}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/invNoState}" 
                                        id="invNo"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>invNoInputText}"
                                        value="{/invNo}"/>
                                </form:SimpleForm>
                            </WizardStep>

                            <!-- second step - document data Details -->
                            <WizardStep id="docDataStep" title="{i18n>docDataStepTitle}">
                                <form:SimpleForm
                                    editable="true"
                                    layout="ResponsiveGridLayout"
                                >
                                    <!-- field - service order  -->
                                    <Label text="{i18n>serOrderNo}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/serOrderNoState}" 
                                        id="serOrderNo"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>serOrderNoInputText}"
                                        value="{/serOrderNo}"/>

                                    <!-- field - CPF  -->
                                    <Label text="{i18n>cpf}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/serOrderNoState}" 
                                        id="cpf"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>cpfInputText}"
                                        value="{/cpf}"/>

                                    <!-- field - reference date  -->
                                    <Label text="{i18n>refDate2}" />
                                    <DatePicker 
                                        id="refDate2"
                                        displayFormat="short"
                                        value="{/refDate2}"
                                    />
                                </form:SimpleForm>
                            </WizardStep>

                            <!-- third step - Item details  -->
                            <WizardStep id="itemDataStep" title="{i18n>itemDataStepTitle}">
                                <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                
                                    <!-- field - causing part  -->
                                    <Label text="{i18n>causingPart}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/causingPartState}" 
                                        id="causingPart"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>causingPartInputText}"
                                        value="{/causingPart}"/>

                                    <!-- field - removed code  -->
                                    <Label text="{i18n>removedCode}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/removedCodeState}" 
                                        id="removedCode"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>removedCodeInputText}"
                                        value="{/removedCode}"/>

                                    <!-- field - quantity  -->
                                    <Label text="{i18n>quantity}" />
                                    <Input 
                                        valueStateText="{i18n>notNullText}"
                                        valueState="{/quantityState}" 
                                        id="quantity"
                                        liveChange="genInfoValidation"
                                        placeholder="{i18n>quantityInputText}"
                                        value="{/quantity}"/>
                                </form:SimpleForm>
                            </WizardStep>

                            <!-- fourth step - comments -->
                            <WizardStep id="commentsSection" title="{i18n>commentsSection}">
                                <form:SimpleForm layout="ResponsiveGridLayout" editable="true">

                                    <!-- field - comments  -->
                                    <Label text="{i18n>comments}" />
                                    <TextArea id="comments" rows="8" value="{/comments}" />
                                </form:SimpleForm>
                            </WizardStep>

                            <!-- fifth step - upload files  -->
                            <WizardStep id="uploadSection" title="{i18n>uploadSectionTitle}">
                                <form:SimpleForm editable="true" layout="ResponsiveGridLayout">

                                    <!-- field - upload files  -->
                                    <Label text="{18n>uploadSectionTitle}"></Label>
                                    <u:FileUploader 
                                        width="100%"
                                        style="Emphasized"
                                        placeholder="{i18n>uploadFileText}"
                                        id="upload" 
                                        value="{/upload}"
                                    />
                                </form:SimpleForm>
                            </WizardStep>

                            <!-- step 6 - review  -->
                            <WizardStep id="reviewPage" title="{i18n>reviewPageTitle}">
                                <content>

                                    <!-- step 1 details review  -->
                                    <form:SimpleForm
                                        title="{i18n>genDetailsText}"
                                        editable="false"
                                        layout="ResponsiveGridLayout">
                                        <form:content>
                                            <Label text="{i18n>partner}" />
                                            <Text id="partnerChosen" text="{/partner}"></Text>

                                            <Label text="{i18n>claimType}" />
                                            <Text id="claimTypeChosen" text="{/claimType}"></Text>

                                            <Label text="{i18n>refDate}" />
                                            <Text id="refDateChosen" text="{/refDate}"></Text>

                                            <Label text="{i18n>invNo}" />
                                            <Text id="invNoChosen" text="{/invNo}"></Text>
                                        </form:content>
                                    </form:SimpleForm>

                                    <!-- step 2 details review  -->
                                    <form:SimpleForm
                                        title="{i18n>docDataStepTitle}"
                                        editable="false"
                                        layout="ResponsiveGridLayout">
                                        <form:content>
                                            <Label text="{i18n>serOrderNo}" />
                                            <Text id="serOrderChosen" text="{/serOrderNo}"></Text>

                                            <Label text="{i18n>cpf}" />
                                            <Text id="cpfChosen" text="{/cpf}"></Text>

                                            <Label text="{i18n>refDate2}" />
                                            <Text id="refDate2Chosen" text="{/refDate2}"></Text>
                                        </form:content>
                                    </form:SimpleForm>

                                    <!-- step 3 details review  -->
                                    <form:SimpleForm
                                        title="{i18n>itemDataStepTitle}"
                                        editable="false"
                                        layout="ResponsiveGridLayout">
                                        <form:content>
                                            <Label text="{i18n>causingPart}" />
                                            <Text id="causingPartChosen" text="{/causingPart}"></Text>

                                            <Label text="{i18n>removedCode}" />
                                            <Text id="removedCodeChosen" text="{/removedCode}"></Text>

                                            <Label text="{i18n>quantity}" />
                                            <Text id="quantityChosen" text="{/quantity}"></Text>
                                        </form:content>
                                    </form:SimpleForm>

                                    <!-- step 4 details review  -->
                                    <form:SimpleForm
                                        title="{i18n>commentsSection}"
                                        editable="false"
                                        layout="ResponsiveGridLayout">
                                        <form:content>
                                            <Label text="{i18n>comments}" />
                                            <Text id="commentsChosen" text="{/comments}"></Text>
                                        </form:content>
                                    </form:SimpleForm>

                                    <!-- step 5 details review  -->
                                    <form:SimpleForm
                                        title="{i18n>uploadSectionTitle}"
                                        editable="false"
                                        layout="ResponsiveGridLayout">
                                        <form:content>
                                            <Label text="{i18n>uploadSectionTitle}" />
                                            <Text id="uploadChosen" text="{/upload}"></Text>
                                        </form:content>
                                    </form:SimpleForm>
                                </content>
                            </WizardStep>
                        </Wizard>
                    </content>
                </Page>
            </pages>
    </NavContainer>
    </App>
    
</mvc:View>